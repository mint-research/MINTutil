<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Gemeinsame Werte fÃ¼r alle Themes -->
    <FontFamily x:Key="FontFamily">Arial</FontFamily>
    <FontFamily x:Key="HeaderFontFamily">Consolas, Monaco</FontFamily>
    <system:Double x:Key="FontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
    <system:Double x:Key="HeaderFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
    <system:Double x:Key="ButtonFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
    <system:Double x:Key="TabButtonFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
    
    <system:Double x:Key="ButtonWidth" xmlns:system="clr-namespace:System;assembly=mscorlib">200</system:Double>
    <system:Double x:Key="ButtonHeight" xmlns:system="clr-namespace:System;assembly=mscorlib">25</system:Double>
    <system:Double x:Key="TabButtonWidth" xmlns:system="clr-namespace:System;assembly=mscorlib">110</system:Double>
    <system:Double x:Key="TabButtonHeight" xmlns:system="clr-namespace:System;assembly=mscorlib">26</system:Double>
    
    <Thickness x:Key="ButtonMargin">1</Thickness>
    <Thickness x:Key="CheckBoxMargin">15,0,0,2</Thickness>
    <system:Double x:Key="CheckBoxBulletDecoratorSize" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
    <system:Double x:Key="ButtonCornerRadius" xmlns:system="clr-namespace:System;assembly=mscorlib">2</system:Double>
    <Thickness x:Key="ButtonBorderThickness">1</Thickness>
    <system:String x:Key="TabContentMargin" xmlns:system="clr-namespace:System;assembly=mscorlib">5</system:String>
    
    <!-- Light Theme Farben -->
    <SolidColorBrush x:Key="MainForegroundColor" Color="#232629"/>
    <SolidColorBrush x:Key="MainBackgroundColor" Color="#F7F7F7"/>
    <SolidColorBrush x:Key="LabelBackgroundColor" Color="#F7F7F7"/>
    <SolidColorBrush x:Key="LabelboxForegroundColor" Color="#232629"/>
    
    <SolidColorBrush x:Key="ComboBoxForegroundColor" Color="#232629"/>
    <SolidColorBrush x:Key="ComboBoxBackgroundColor" Color="#F7F7F7"/>
    
    <SolidColorBrush x:Key="LinkForegroundColor" Color="#484848"/>
    <SolidColorBrush x:Key="LinkHoverForegroundColor" Color="#232629"/>
    
    <SolidColorBrush x:Key="ScrollBarBackgroundColor" Color="#4A4D52"/>
    <SolidColorBrush x:Key="ScrollBarHoverColor" Color="#5A5D62"/>
    <SolidColorBrush x:Key="ScrollBarDraggingColor" Color="#6A6D72"/>
    
    <SolidColorBrush x:Key="ProgressBarForegroundColor" Color="#2e77ff"/>
    <SolidColorBrush x:Key="ProgressBarBackgroundColor" Color="Transparent"/>
    <SolidColorBrush x:Key="ProgressBarTextColor" Color="#232629"/>
    
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressedColor" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="ButtonBackgroundMouseoverColor" Color="#C2C2C2"/>
    <SolidColorBrush x:Key="ButtonBackgroundSelectedColor" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="#232629"/>
    
    <SolidColorBrush x:Key="ToggleButtonOnColor" Color="#2e77ff"/>
    <SolidColorBrush x:Key="ToggleButtonOffColor" Color="#707070"/>
    
    <SolidColorBrush x:Key="BorderColor" Color="#232629"/>
    <system:Double x:Key="BorderOpacity" xmlns:system="clr-namespace:System;assembly=mscorlib">0.2</system:Double>
    
    <SolidColorBrush x:Key="AppInstallUnselectedColor" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="AppInstallHighlightedColor" Color="#CFCFCF"/>
    <SolidColorBrush x:Key="AppInstallSelectedColor" Color="#C2C2C2"/>
</ResourceDictionary>