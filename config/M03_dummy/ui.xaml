<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <Image Name="ConstructionImage" Width="150" Height="150" Source="pack://application:,,,/System.Drawing;component/construction.png" />
    <TextBlock Text="Under Construction" FontWeight="Bold" FontSize="24" Margin="0,20,0,10" HorizontalAlignment="Center" />
    <TextBlock TextWrapping="Wrap" MaxWidth="500" HorizontalAlignment="Center" TextAlignment="Center" Margin="20">
      Dieses Modul befindet sich noch in der Entwicklung. Neue Funktionen werden in Kürze verfügbar sein.
    </TextBlock>
    <Border Background="#FFFBD9" BorderBrush="#FFCC00" BorderThickness="1" Padding="15" Margin="20" CornerRadius="5" MaxWidth="500">
      <StackPanel>
        <TextBlock Text="Geplante Funktionen:" FontWeight="SemiBold" Margin="0,0,0,10" />
        <TextBlock TextWrapping="Wrap">
          • Benutzerdefinierte Konfigurationsoptionen<LineBreak/>
          • Erweiterte Datenvisualisierung<LineBreak/>
          • Integration mit externen Diensten<LineBreak/>
          • Automatisierte Reports
        </TextBlock>
      </StackPanel>
    </Border>
    <Button Name="BtnNotify" Content="Bei Fertigstellung benachrichtigen" Padding="15,8" Margin="0,10,0,0" />
  </StackPanel>
</Grid>